{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./out",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}